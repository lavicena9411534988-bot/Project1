      box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
    }
    #result {
      width: 100%;
      height: 50px;
      text-align: right;
      font-size: 1.5rem;
      margin-bottom: 10px;
      padding: 5px;
      border: none;
      outline: none;
      background: #f0f0f0;
      border-radius: 10px;
    }
    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }
    button {
      padding: 15px;
      font-size: 1.2rem;
      border: none;
      border-radius: 10px;
      background: #e0e0e0;
      cursor: pointer;
      transition: 0.3s;
    }
    button:hover {
      background: #d1d1d1;
